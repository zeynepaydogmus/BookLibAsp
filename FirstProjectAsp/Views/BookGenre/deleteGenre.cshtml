@model BookGenre

<form method="post">
    <div class="border p-3 mt-5">
        <div class="row pb-3">
            <h2 class="text-primary"> Kitap Türü Sil </h2>
            </hr>
        </div>
        <div class="mb-3">
            <label asp-for="Name" class="p-0"></label>
            <input asp-for="Name" disabled class="form-control" />
        </div>
        <button type="submit" class="btn btn-lg btn-primary" style="width:200px">
            Sil
        </button>
        <a asp-controller="BookGenre" asp-action="Index" class="btn btn-lg btn-primary" style="width:250px">
            Kitap Türü Listesi
        </a>
    </div>
</form>
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}